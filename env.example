# AstroSurge Environment Configuration
# Copy this file to .env and update with your actual values

# MongoDB Configuration (External)
MONGODB_URI=mongodb://username:password@host:port/database

# Flask Configuration
FLASK_ENV=production
FLASK_APP=web_ui.py
FLASK_DEBUG=false

# Python Configuration
PYTHONPATH=/astrosurge

# Application Configuration
# Port numbers (URLs are constructed from these based on environment)
API_PORT=8000
DASHBOARD_PORT=5000
# API_HOST (optional, defaults to 'localhost' for local dev, 'api' in Docker Compose)
# API_HOST=localhost

# Security (for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=/astrosurge/logs/astrosurge.log